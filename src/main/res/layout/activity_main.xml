<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EBEFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/tab" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/tab" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_column="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69"
        app:layout_row="0"
        app:srcCompat="@drawable/board"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moves: 0"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0/8"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="388dp"
        android:layout_height="487dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68"
        app:rowCount="4">

        <ImageView
            android:id="@+id/card0"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card1"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:rotationX="0"
            android:rotationY="0"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="3"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="4"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card5"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="5"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card6"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="6"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card7"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="7"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card8"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="8"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card9"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="9"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card10"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="10"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card11"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="11"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card12"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="12"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card13"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="13"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card14"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="14"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/card15"
            android:layout_width="98dp"
            android:layout_height="121dp"
            android:contentDescription="card"
            android:onClick="turnFront"
            android:padding="10dp"
            android:tag="15"
            app:layout_column="3"
            app:layout_row="3"
            app:srcCompat="@drawable/card" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/congratspanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/congrats" />

    <TextView
        android:id="@+id/congratstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You won with"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/congratspanel"
        app:layout_constraintEnd_toEndOf="@+id/congratspanel"
        app:layout_constraintStart_toStartOf="@+id/congratspanel"
        app:layout_constraintTop_toTopOf="@+id/congratspanel"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/congratsbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x moves"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/congratspanel"
        app:layout_constraintEnd_toEndOf="@+id/congratspanel"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/congratspanel"
        app:layout_constraintTop_toTopOf="@+id/congratspanel"
        app:layout_constraintVertical_bias="0.43" />

    <Button
        android:id="@+id/playagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="newGame"
        android:text="play again"
        android:textColor="#6200EE"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/congratspanel"
        app:layout_constraintEnd_toEndOf="@+id/congratspanel"
        app:layout_constraintStart_toStartOf="@+id/congratspanel"
        app:layout_constraintTop_toTopOf="@+id/congratspanel"
        app:layout_constraintVertical_bias="0.82" />

</androidx.constraintlayout.widget.ConstraintLayout>